<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <ToolBar x:Name="toolBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem x:Name="itemOpen" Header="Open" Click="toolbarOpen_Click" />
                    <MenuItem x:Name="itemExit" Header="Exit" Click="toolbarExit_Click" />
                </MenuItem>
            </Menu>
        </ToolBar>
        <TreeView x:Name="tree" Margin="-2,33,558,-33" >
        </TreeView>
        <TextBox x:Name="textBlock" HorizontalAlignment="Left" Margin="239,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="391" Width="543" VerticalScrollBarVisibility="Auto" IsReadOnly="True" >
        
        </TextBox>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="99*">

            </ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

    </Grid>

</Window>
